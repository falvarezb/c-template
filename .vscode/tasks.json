{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++ macos: build program",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-fdiagnostics-color=always",
                "-Wall",    
                "-Wno-missing-braces ",
                "-Wextra",
                "-Wshadow",
                "-Wpedantic",
                "-std=c17",
                "-DFAB_MAIN",
                "myfile.c",
                //"${fileDirname}/other_file.c",            
                "-o",
                "${workspaceFolder}/out/myprogram"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++ macos: compile active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-c",
                "-fdiagnostics-color=always",
                "-Wall",    
                "-Wno-missing-braces ",
                "-Wextra",
                "-Wshadow",
                "-Wpedantic",
                "-std=c17",
                "-DFAB_MAIN",
                "${file}",                       
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++ macos: build tests",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-fdiagnostics-color=always",
                "-Wall",    
                "-Wno-missing-braces ",
                "-Wextra",
                "-Wshadow",
                "-Wpedantic",
                "-std=c17",                
                "${workspaceFolder}/*.c",             
                "-lcmocka",
                "-o",
                "${workspaceFolder}/out/test"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Task to run tests"
        }
    ],
    "version": "2.0.0"
}